          $C.@DropdownBox #FilterMode {
            @Anchor = (Width: 90);
          }
          $C.@CheckBox #MatchMeta {
            @Anchor = (Width: 70);
          }
        }

        Group #SideUp {
          LayoutMode: Left;
          Anchor: (Height: 28);

          Label #SideLabel {
