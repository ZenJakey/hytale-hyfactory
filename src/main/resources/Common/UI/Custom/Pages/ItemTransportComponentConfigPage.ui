            @Anchor = (Width: 100);
          }
          $C.@TextField #FilterIds {
            @Anchor = (Width: 200);
          }
          $C.@DropdownBox #FilterMode {
            @Anchor = (Width: 90);
          }
          $C.@CheckBox #MatchMeta {
            @Anchor = (Width: 70);
          }
        }

        Group #SideWest {
          LayoutMode: Left;
          Anchor: (Height: 28);

          Label #SideLabel {
            Text: "West";
            Anchor: (Width: 80);
            Style: $C.@DefaultLabelStyle;
          }
          $C.@DropdownBox #Mode {
