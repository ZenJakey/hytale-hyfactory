          }
        }

        Group #SideDown {
          LayoutMode: Left;
          Anchor: (Height: 28);

          Label #SideLabel {
            Text: "Down";
            Anchor: (Width: 80);
            Style: $C.@DefaultLabelStyle;
          }
          $C.@DropdownBox #Mode {
            @Anchor = (Width: 100);
          }
          $C.@TextField #FilterIds {
            @Anchor = (Width: 200);
          }
          $C.@DropdownBox #FilterMode {
            @Anchor = (Width: 90);
          }
          $C.@CheckBox #MatchMeta {
            @Anchor = (Width: 70);
          }
        }

        Group #Buttons {
          LayoutMode: Left;
          Anchor: (Height: 36);

          $C.@TextButton #ApplyButton {
            Text: "Apply";
          }
          $C.@SecondaryTextButton #ResetButton {
            Text: "Reset";
          }
          $C.@SecondaryTextButton #CloseButton {
            Text: "Close";
          }
        }
      }
    }
  }
}
