          }
          $C.@DropdownBox #FilterMode {
            @Anchor = (Width: 90);
          }
          $C.@CheckBox #MatchMeta {
            @Anchor = (Width: 70);
          }
        }

        Group #SideEast {
          LayoutMode: Left;
          Anchor: (Height: 28);

